{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "jquery": false
  },
  "parserOptions": {
    "ecmaVersion": "2021",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "eqeqeq": "error",
    "curly": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-alert": "error",
    "no-eval": "error",
    "no-trailing-spaces": "warn",
    "max-depth": [
      2,
      3
    ],
    "max-nested-callbacks": [
      2,
      2
    ]
  }
}
